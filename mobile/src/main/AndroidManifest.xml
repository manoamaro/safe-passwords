<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.manoel.amaro.safepasswords" >

    <application
        android:name="br.com.manoel.amaro.safepasswords.ContextApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.manoel.amaro.safepasswords.activity.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.manoel.amaro.safepasswords.activity.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="br.com.manoel.amaro.safepasswords.activity.NewPasswordActivity"
            android:label="@string/title_activity_new_password" >
        </activity>
    </application>

</manifest>
