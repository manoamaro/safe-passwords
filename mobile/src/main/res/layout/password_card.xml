<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/password_card_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:id="@+id/password_list_card"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="0dp"
        android:transitionName="@string/password_detail_transition_name">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

            <View
                android:id="@+id/password_image_cat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/oval"
                android:layout_marginStart="10dp"
                android:transitionName="@string/password_image_transition"/>

            <TextView
                android:id="@+id/info_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_placeholder"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:transitionName="@string/password_detail_title_transition_name"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>